{
	"name": "Deno",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {},
	"forwardPorts": [],
	"postCreateCommand": "node -v & deno -v",
	"customizations": {
		"vscode": {
			"extensions": [
				"justjavac.vscode-deno-extensionpack",
				"denoland.vscode-deno",
    			"bradlc.vscode-tailwindcss"
			],
			"settings": {
				"deno.enable": true,
				"deno.lint": true,
				"editor.defaultFormatter": "denoland.vscode-deno",
				"[typescriptreact]": {
				  "editor.defaultFormatter": "denoland.vscode-deno"
				},
				"[typescript]": {
				  "editor.defaultFormatter": "denoland.vscode-deno"
				},
				"[javascriptreact]": {
				  "editor.defaultFormatter": "denoland.vscode-deno"
				},
				"[javascript]": {
				  "editor.defaultFormatter": "denoland.vscode-deno"
				},
				"css.customData": [
				  ".vscode/tailwind.json"
				]
			  }
		}
	}
}
